  <div class="modal fade" id="askModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Ask a Question</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
       <form>
          <div class="form-group">
             <label for="user" class="font-weight-bold">User</label>
             <input type="text" class ="form-control" id="userName"> 
             <label for="subject" class ="font-weight-bold">Topic</label>
             <select name="subject" class="form-control" id="subjectChosen">
                    <option value="HTML">HTML</option>
                    <option value="CSS">CSS</option>
                    <option value="NodeJS">NodeJS</option>
                    <option value="ExpressJS">ExpressJS</option>
                    <option value="Javascript">Javascript</option>
                    <option value="MongoDB">MongoDB</option>
              </select>
            <label for="question" class ="font-weight-bold">Question</label>
            <textarea class="form-control" id="questionAsked" rows="10" cols="50"></textarea>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary" id ="askButtonInModal">Ask</button>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="answerModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Answer Question</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
         <div id="alreadyExists">
         </div>
        <form>
          <div class="form-group">
            <label for="comments" class="font-weight-bold">Answer</label>
            <textarea class="form-control" id="answerGiven" rows="10" cols="80"></textarea>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary" id="answerButtonInModal">Answer</button>
      </div>
    </div>
  </div>
